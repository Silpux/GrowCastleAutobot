<UserControl x:Class="gca.BuildUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:gca"
             mc:Ignorable="d" 
             d:DesignHeight="865" d:DesignWidth="390">

    <UserControl.Resources>
        <Style x:Key="WhiteButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        RecognizesAccessKey="True" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Canvas x:Name="BuildCanvas" Width="390" Height="500" VerticalAlignment="Top" HorizontalAlignment="Left">

            <RadioButton x:Name="BuildPw" GroupName="BuildHeroChoose" Content="Pw" Canvas.Left="25" Canvas.Top="28" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <RadioButton x:Name="BuildSmith" GroupName="BuildHeroChoose" Content="Smith" Canvas.Left="25" Canvas.Top="47" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <RadioButton x:Name="BuildOrcBand" GroupName="BuildHeroChoose" Content="Orc band" Canvas.Left="25" Canvas.Top="66" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <RadioButton x:Name="BuildMilitaryF" GroupName="BuildHeroChoose" Content="Military F" Canvas.Left="25" Canvas.Top="85" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <RadioButton x:Name="BuildChrono" GroupName="BuildHeroChoose" Content="Chrono" Canvas.Left="25" Canvas.Top="104" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <RadioButton x:Name="SingleClick" GroupName="BuildHeroChoose" Content="single click" Canvas.Left="25" Canvas.Top="123" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <RadioButton x:Name="BuildClickable" GroupName="BuildHeroChoose" Content="clickable" Canvas.Left="25" Canvas.Top="142" HorizontalAlignment="Left" VerticalAlignment="Top"/>

            <Label Content="Castle:" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="23" Canvas.Top="173"/>

            <Grid Height="110" Width="101" Canvas.Left="104" Canvas.Top="216"/>

        </Canvas>
    </Grid>
</UserControl>
