<UserControl x:Class="gca_clicker.WaitBetweenBattlesUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:gca_clicker"
             xmlns:converters="clr-namespace:gca_clicker.Classes.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="330">
    <UserControl.Resources>
        <converters:AddConverter x:Key="Adder" Add="-13"/>
    </UserControl.Resources>
    <Grid Background="White" Margin="10 0 0 0">

        <Border Name="ContainerBorder" BorderBrush="Gray"
        BorderThickness="1"
        CornerRadius="3"
        Padding="5"
        Margin="5"
        Background="White">

            <Canvas x:Name="WaitBetweenBattlesCanvas" Width="297" Height="190" VerticalAlignment="Top" HorizontalAlignment="Left">



                <CheckBox x:Name="EnableCheckbox" Content="Wait 1" Canvas.Left="10" Canvas.Top="6" HorizontalAlignment="Left" VerticalAlignment="Top" Checked="EnableCheckbox_Checked" Unchecked="EnableCheckbox_Unchecked"/>

                <Label Name="MinTriggerSecLabel" Content="Trigger min (s)" Canvas.Left="5" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Top="33"/>
                <TextBox x:Name="MinTriggerSecTextBox" PreviewTextInput="NumberOnlyMaxLength_PreviewTextInput" Tag="7" Text="50" Width="52" Canvas.Left="87" Height="25" 
                                    VerticalContentAlignment="Center" TextWrapping="NoWrap" HorizontalAlignment="Left" VerticalAlignment="Center" TextChanged="TextBox_RewriteSettings" LostFocus="TextBox_Insert0OnError" Canvas.Top="33"/>

                <Label Name="MaxTriggerSecLabel" Content="Trigger max (s)" Canvas.Left="142" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Top="33"/>
                <TextBox x:Name="MaxTriggerSecTextBox" PreviewTextInput="NumberOnlyMaxLength_PreviewTextInput" Tag="7" Text="150" Width="52" Canvas.Left="230" Height="25" 
                                    VerticalContentAlignment="Center" TextWrapping="NoWrap" HorizontalAlignment="Left" VerticalAlignment="Center" TextChanged="TextBox_RewriteSettings" LostFocus="TextBox_Insert0OnError" Canvas.Top="33"/>


                <Label Name="MinWaitSecLabel" Content="Wait min (s)" Canvas.Left="5" Canvas.Top="64" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBox x:Name="MinWaitSecTextBox" PreviewTextInput="NumberOnlyMaxLength_PreviewTextInput" Tag="7" Text="50" Width="52" Canvas.Left="87" Canvas.Top="64" Height="25" 
                                    VerticalContentAlignment="Center" TextWrapping="NoWrap" HorizontalAlignment="Left" VerticalAlignment="Center" TextChanged="TextBox_RewriteSettings" LostFocus="TextBox_Insert0OnError"/>

                <Label Name="MaxWaitSecLabel" Content="Wait max (s)" Canvas.Left="144" Canvas.Top="64" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBox x:Name="MaxWaitSecTextBox" PreviewTextInput="NumberOnlyMaxLength_PreviewTextInput" Tag="7" Text="150" Width="52" Canvas.Left="230" Canvas.Top="64" Height="25" 
                                    VerticalContentAlignment="Center" TextWrapping="NoWrap" HorizontalAlignment="Left" VerticalAlignment="Center" TextChanged="TextBox_RewriteSettings" LostFocus="TextBox_Insert0OnError"/>


                <Button Name="RemoveButton" Content="X" Canvas.Left="258" HorizontalAlignment="Left" VerticalAlignment="Center" Width="24" Height="24" Click="Remove_Click"/>










                <ToggleButton x:Name="OnlineActionsDropdown" Content="Online actions ⏷" Width="120" Canvas.Left="10" Canvas.Top="100" HorizontalAlignment="Left" VerticalAlignment="Center"/>

                <Popup Name="OnlineActionsPopup" PlacementTarget="{Binding ElementName=OnlineActionsDropdown}"
           IsOpen="{Binding IsChecked, ElementName=OnlineActionsDropdown}"
           StaysOpen="False">


                    <Border BorderBrush="Black" BorderThickness="1" Background="White">
                        <Canvas Width="280" Height="310">


                            <CheckBox x:Name="OpenGuildCheckbox" Content="Open guild" Canvas.Left="10" Canvas.Top="10" HorizontalAlignment="Center" VerticalAlignment="Top" Checked="OpenGuildCheckbox_Checked" Unchecked="OpenGuildCheckbox_Unchecked"/>

                            <Label Name="OpenGuildChanceLabel" IsEnabled="False" Content="Chance(%):" Canvas.Left="177" Canvas.Top="5" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                            <TextBox x:Name="OpenGuildChanceTextBox" IsEnabled="False" PreviewTextInput="NumberOnlyMaxLength_PreviewTextInput" Tag="3" Text="100" Width="30" Canvas.Left="244" Canvas.Top="8" Height="20" 
                                VerticalContentAlignment="Center" TextWrapping="NoWrap" HorizontalAlignment="Center" VerticalAlignment="Top" TextChanged="TextBox_RewriteSettings" LostFocus="TextBox_Insert0OnError"/>


                            <CheckBox x:Name="OpenRandomProfileFromGuildCheckbox" Content="Open random profile" Canvas.Left="26" Canvas.Top="31" HorizontalAlignment="Center" VerticalAlignment="Top" Checked="OpenRandomProfileFromGuildCheckbox_Checked" Unchecked="OpenRandomProfileFromGuildCheckbox_Unchecked"/>

                            <Label Name="OpenRandomProfileFromGuildChanceLabel" IsEnabled="False" Content="Chance(%):" Canvas.Left="177" Canvas.Top="26" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                            <TextBox x:Name="OpenRandomProfileFromGuildChanceTextBox" PreviewTextInput="NumberOnlyMaxLength_PreviewTextInput" Tag="3" Text="100" Width="30" Canvas.Left="244" Canvas.Top="29" Height="20" 
                                VerticalContentAlignment="Center" TextWrapping="NoWrap" HorizontalAlignment="Center" VerticalAlignment="Top" TextChanged="TextBox_RewriteSettings" LostFocus="TextBox_Insert0OnError" IsEnabled="False"/>


                            <CheckBox x:Name="OpenGuildsTopCheckbox" Content="Open guilds top" Canvas.Left="26" Canvas.Top="73" HorizontalAlignment="Center" VerticalAlignment="Top" Checked="OpenGuildsTopCheckbox_Checked" Unchecked="OpenGuildsTopCheckbox_Unchecked"/>

                            <Label Name="OpenGuildsTopChanceLabel" IsEnabled="False" Content="Chance(%):" Canvas.Left="177" Canvas.Top="68" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                            <TextBox x:Name="OpenGuildsTopChanceTextBox" IsEnabled="False" PreviewTextInput="NumberOnlyMaxLength_PreviewTextInput" Tag="3" Text="100" Width="30" Canvas.Left="244" Canvas.Top="71" Height="20" 
                                VerticalContentAlignment="Center" TextWrapping="NoWrap" HorizontalAlignment="Center" VerticalAlignment="Top" TextChanged="TextBox_RewriteSettings" LostFocus="TextBox_Insert0OnError"/>





                            <CheckBox x:Name="OpenGuildsChatCheckbox" Content="Open guilds chat" Canvas.Left="26" Canvas.Top="52" HorizontalAlignment="Center" VerticalAlignment="Top" Checked="OpenGuildsChatCheckbox_Checked" Unchecked="OpenGuildsChatCheckbox_Unchecked"/>

                            <Label Name="OpenGuildsChatChanceLabel" IsEnabled="False" Content="Chance(%):" Canvas.Left="177" Canvas.Top="47" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                            <TextBox x:Name="OpenGuildsChatChanceTextBox" PreviewTextInput="NumberOnlyMaxLength_PreviewTextInput" Tag="3" Text="100" Width="30" Canvas.Left="244" Canvas.Top="50" Height="20" 
                                VerticalContentAlignment="Center" TextWrapping="NoWrap" HorizontalAlignment="Center" VerticalAlignment="Top" TextChanged="TextBox_RewriteSettings" LostFocus="TextBox_Insert0OnError" IsEnabled="False"/>



                            <CheckBox x:Name="OpenTopCheckbox" Content="Open top" Canvas.Left="10" Canvas.Top="94" HorizontalAlignment="Center" VerticalAlignment="Top" Checked="OpenTopCheckbox_Checked" Unchecked="OpenTopCheckbox_Unchecked"/>

                            <Label Name="OpenTopChanceLabel" IsEnabled="False" Content="Chance(%):" Canvas.Left="177" Canvas.Top="89" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                            <TextBox x:Name="OpenTopChanceTextBox" IsEnabled="False" PreviewTextInput="NumberOnlyMaxLength_PreviewTextInput" Tag="3" Text="100" Width="30" Canvas.Left="244" Canvas.Top="92" Height="20" 
                                VerticalContentAlignment="Center" TextWrapping="NoWrap" HorizontalAlignment="Center" VerticalAlignment="Top" TextChanged="TextBox_RewriteSettings" LostFocus="TextBox_Insert0OnError"/>

                            <CheckBox x:Name="OpenTopSeasonCheckbox" Content="Open top season waves" Canvas.Left="26" Canvas.Top="115" HorizontalAlignment="Center" VerticalAlignment="Top" Checked="OpenTopSeasonCheckbox_Checked" Unchecked="OpenTopSeasonCheckbox_Unchecked"/>

                            <Label Name="OpenTopSeasonChanceLabel" IsEnabled="False" Content="Chance(%):" Canvas.Left="177" Canvas.Top="110" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                            <TextBox x:Name="OpenTopSeasonChanceTextBox" PreviewTextInput="NumberOnlyMaxLength_PreviewTextInput" Tag="3" Text="100" Width="30" Canvas.Left="244" Canvas.Top="113" Height="20" 
                                VerticalContentAlignment="Center" TextWrapping="NoWrap" HorizontalAlignment="Center" VerticalAlignment="Top" TextChanged="TextBox_RewriteSettings" LostFocus="TextBox_Insert0OnError" IsEnabled="False"/>


                            <CheckBox x:Name="OpenHellSeasonCheckbox" Content="Open hell season" Canvas.Left="26" Canvas.Top="136" HorizontalAlignment="Center" VerticalAlignment="Top" Checked="OpenHellSeasonCheckbox_Checked" Unchecked="OpenHellSeasonCheckbox_Unchecked"/>

                            <Label Name="OpenHellSeasonChanceLabel" IsEnabled="False" Content="Chance(%):" Canvas.Left="177" Canvas.Top="131" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                            <TextBox x:Name="OpenHellSeasonChanceTextBox" PreviewTextInput="NumberOnlyMaxLength_PreviewTextInput" Tag="3" Text="100" Width="30" Canvas.Left="244" Canvas.Top="134" Height="20" 
                                VerticalContentAlignment="Center" TextWrapping="NoWrap" HorizontalAlignment="Center" VerticalAlignment="Top" TextChanged="TextBox_RewriteSettings" LostFocus="TextBox_Insert0OnError" IsEnabled="False"/>


                            <CheckBox x:Name="OpenHellSeasonMyCheckbox" Content="Open my hell season" Canvas.Left="26" Canvas.Top="157" HorizontalAlignment="Center" VerticalAlignment="Top" Checked="OpenHellSeasonMyCheckbox_Checked" Unchecked="OpenHellSeasonMyCheckbox_Unchecked"/>

                            <Label Name="OpenHellSeasonMyChanceLabel" IsEnabled="False" Content="Chance(%):" Canvas.Left="177" Canvas.Top="152" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                            <TextBox x:Name="OpenHellSeasonMyChanceTextBox" PreviewTextInput="NumberOnlyMaxLength_PreviewTextInput" Tag="3" Text="100" Width="30" Canvas.Left="244" Canvas.Top="155" Height="20" 
                                VerticalContentAlignment="Center" TextWrapping="NoWrap" HorizontalAlignment="Center" VerticalAlignment="Top" TextChanged="TextBox_RewriteSettings" LostFocus="TextBox_Insert0OnError" IsEnabled="False"/>


                            <CheckBox x:Name="OpenWavesTopCheckbox" Content="Open top waves overall" Canvas.Left="26" Canvas.Top="178" HorizontalAlignment="Center" VerticalAlignment="Top" Checked="OpenWavesTopCheckbox_Checked" Unchecked="OpenWavesTopCheckbox_Unchecked"/>

                            <Label Name="OpenWavesTopChanceLabel" IsEnabled="False" Content="Chance(%):" Canvas.Left="177" Canvas.Top="173" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                            <TextBox x:Name="OpenWavesTopChanceTextBox" PreviewTextInput="NumberOnlyMaxLength_PreviewTextInput" Tag="3" Text="100" Width="30" Canvas.Left="244" Canvas.Top="176" Height="20" 
                                VerticalContentAlignment="Center" TextWrapping="NoWrap" HorizontalAlignment="Center" VerticalAlignment="Top" TextChanged="TextBox_RewriteSettings" LostFocus="TextBox_Insert0OnError" IsEnabled="False"/>


                            <CheckBox x:Name="OpenWavesTopMyCheckbox" Content="Open top waves my" Canvas.Left="26" Canvas.Top="199" HorizontalAlignment="Center" VerticalAlignment="Top" Checked="OpenWavesTopMyCheckbox_Checked" Unchecked="OpenWavesTopMyCheckbox_Unchecked"/>

                            <Label Name="OpenWavesTopMyChanceLabel" IsEnabled="False" Content="Chance(%):" Canvas.Left="177" Canvas.Top="194" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                            <TextBox x:Name="OpenWavesTopMyChanceTextBox" PreviewTextInput="NumberOnlyMaxLength_PreviewTextInput" Tag="3" Text="100" Width="30" Canvas.Left="244" Canvas.Top="197" Height="20" 
                                VerticalContentAlignment="Center" TextWrapping="NoWrap" HorizontalAlignment="Center" VerticalAlignment="Top" TextChanged="TextBox_RewriteSettings" LostFocus="TextBox_Insert0OnError" IsEnabled="False"/>





                            <CheckBox x:Name="CraftStonesCheckbox" Content="Craft stones" Canvas.Left="10" Canvas.Top="220" HorizontalAlignment="Left" VerticalAlignment="Center" Checked="CraftStonesCheckbox_Checked" Unchecked="CraftStonesCheckbox_Unchecked"/>

                            <Label Name="CraftStonesChanceLabel" IsEnabled="False" Content="Chance(%):" Canvas.Left="177" Canvas.Top="215" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            <TextBox x:Name="CraftStonesChanceTextBox" IsEnabled="False" PreviewTextInput="NumberOnlyMaxLength_PreviewTextInput" Tag="3" Text="100" Width="30" Canvas.Left="244" Canvas.Top="218" Height="20" 
                                VerticalContentAlignment="Center" TextWrapping="NoWrap" HorizontalAlignment="Left" VerticalAlignment="Center" TextChanged="TextBox_RewriteSettings" LostFocus="TextBox_Insert0OnError"/>

                            <CheckBox x:Name="DoSaveCheckbox" Content="Do save" Canvas.Left="10" Canvas.Top="241" HorizontalAlignment="Center" VerticalAlignment="Top" Checked="DoSaveCheckbox_Checked" Unchecked="DoSaveCheckbox_Unchecked"/>

                            <Label Name="DoSaveChanceLabel" IsEnabled="False" Content="Chance(%):" Canvas.Left="177" Canvas.Top="236" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                            <TextBox x:Name="DoSaveChanceTextBox" IsEnabled="False" PreviewTextInput="NumberOnlyMaxLength_PreviewTextInput" Tag="3" Text="100" Width="30" Canvas.Left="244" Canvas.Top="239" Height="20" 
                                VerticalContentAlignment="Center" TextWrapping="NoWrap" HorizontalAlignment="Center" VerticalAlignment="Top" TextChanged="TextBox_RewriteSettings" LostFocus="TextBox_Insert0OnError"/>



                            <Line X1="0" Y1="269" 
                            X2="280"
                            Y2="269"
                            Stroke="Black"
                            IsHitTestVisible="False"/>



                            <CheckBox x:Name="BeforeWaitCheckbox" IsChecked="True" Content="Before wait" Canvas.Left="52" Canvas.Top="282" HorizontalAlignment="Left" VerticalAlignment="Center" Checked="TimeOfOnlineActionCheckbox_Checked" Unchecked="TimeOfOnlineActionCheckbox_Unchecked"/>
                            <CheckBox x:Name="AfterWaitCheckbox" Content="After wait" Canvas.Left="151" Canvas.Top="282" HorizontalAlignment="Left" VerticalAlignment="Center" Checked="TimeOfOnlineActionCheckbox_Checked" Unchecked="TimeOfOnlineActionCheckbox_Unchecked"/>



                        </Canvas>
                    </Border>

                </Popup>




                <Label Name="TimeLeftLabel" Content="00:00:00.00" Canvas.Left="5" HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Top="156"/>

                <Label Name="StatusLabel" Content="Status" Canvas.Left="5" HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Top="132"/>


                <Label Name="WaitIgnoredLabel" Content="Wait will be ignored" Foreground="Red" Canvas.Left="171" HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Top="97"/>




                <Line x:Name="RightLine" X1="0" Y1="25" 
                    X2="{Binding ActualWidth, ElementName=ContainerBorder, Converter={StaticResource Adder}}"
                    Y2="{Binding ActualHeight, ElementName=ContainerBorder, Converter={StaticResource Adder}}"
                    Stroke="Red"
                    StrokeThickness="2"
                    IsHitTestVisible="False"/>

                <Line x:Name="LeftLine" X1="0" Y1="{Binding ActualHeight, ElementName=ContainerBorder, Converter={StaticResource Adder}}" 
                    X2="{Binding ActualWidth, ElementName=ContainerBorder, Converter={StaticResource Adder}}"
                    Y2="25"
                    Stroke="Red"
                    StrokeThickness="2"
                    IsHitTestVisible="False"/>
            </Canvas>
        </Border>

    </Grid>
</UserControl>
