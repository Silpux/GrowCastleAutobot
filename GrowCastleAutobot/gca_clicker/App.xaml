<Application x:Class="gca_clicker.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:gca_clicker"
             xmlns:cmd="clr-namespace:gca_clicker.Classes"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <cmd:TooltipSelectorConverter x:Key="TooltipSelectorConverter" />
        <Style TargetType="CheckBox">
            <Setter Property="ToolTipService.InitialShowDelay" Value="500"/>
            <Setter Property="ToolTipService.ShowOnDisabled" Value="True"/>
            <Setter Property="ToolTipService.ToolTip">
                <Setter.Value>
                    <MultiBinding Converter="{StaticResource TooltipSelectorConverter}">
                        <Binding RelativeSource="{RelativeSource Self}" Path="IsEnabled"/>
                        <Binding RelativeSource="{RelativeSource Self}" Path="(cmd:TooltipHelper.EnabledTooltip)"/>
                        <Binding RelativeSource="{RelativeSource Self}" Path="(cmd:TooltipHelper.DisabledTooltip)"/>
                    </MultiBinding>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Button">
            <Setter Property="ToolTipService.InitialShowDelay" Value="500"/>
            <Setter Property="ToolTipService.ShowOnDisabled" Value="True"/>
            <Setter Property="ToolTipService.ToolTip">
                <Setter.Value>
                    <MultiBinding Converter="{StaticResource TooltipSelectorConverter}">
                        <Binding RelativeSource="{RelativeSource Self}" Path="IsEnabled"/>
                        <Binding RelativeSource="{RelativeSource Self}" Path="(cmd:TooltipHelper.EnabledTooltip)"/>
                        <Binding RelativeSource="{RelativeSource Self}" Path="(cmd:TooltipHelper.DisabledTooltip)"/>
                    </MultiBinding>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="ToolTipService.InitialShowDelay" Value="500"/>
            <Setter Property="ToolTipService.ShowOnDisabled" Value="True"/>
            <Setter Property="ToolTipService.ToolTip">
                <Setter.Value>
                    <MultiBinding Converter="{StaticResource TooltipSelectorConverter}">
                        <Binding RelativeSource="{RelativeSource Self}" Path="IsEnabled"/>
                        <Binding RelativeSource="{RelativeSource Self}" Path="(cmd:TooltipHelper.EnabledTooltip)"/>
                        <Binding RelativeSource="{RelativeSource Self}" Path="(cmd:TooltipHelper.DisabledTooltip)"/>
                    </MultiBinding>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Label">
            <Setter Property="ToolTipService.InitialShowDelay" Value="500"/>
            <Setter Property="ToolTipService.ShowOnDisabled" Value="True"/>
            <Setter Property="ToolTipService.ToolTip">
                <Setter.Value>
                    <MultiBinding Converter="{StaticResource TooltipSelectorConverter}">
                        <Binding RelativeSource="{RelativeSource Self}" Path="IsEnabled"/>
                        <Binding RelativeSource="{RelativeSource Self}" Path="(cmd:TooltipHelper.EnabledTooltip)"/>
                        <Binding RelativeSource="{RelativeSource Self}" Path="(cmd:TooltipHelper.DisabledTooltip)"/>
                    </MultiBinding>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="ToolTipService.InitialShowDelay" Value="500"/>
            <Setter Property="ToolTipService.ShowOnDisabled" Value="True"/>
            <Setter Property="ToolTipService.ToolTip">
                <Setter.Value>
                    <MultiBinding Converter="{StaticResource TooltipSelectorConverter}">
                        <Binding RelativeSource="{RelativeSource Self}" Path="IsEnabled"/>
                        <Binding RelativeSource="{RelativeSource Self}" Path="(cmd:TooltipHelper.EnabledTooltip)"/>
                        <Binding RelativeSource="{RelativeSource Self}" Path="(cmd:TooltipHelper.DisabledTooltip)"/>
                    </MultiBinding>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="WhiteButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        RecognizesAccessKey="True" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ControlButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        RecognizesAccessKey="True" />
                        </Border>

                    </ControlTemplate>
                </Setter.Value>

            </Setter>
            <Setter Property="Opacity" Value="1"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Application.Resources>
</Application>
